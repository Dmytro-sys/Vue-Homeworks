{% set title = "Logos page" %}
{% extends "layouts/master.njk" %}

{% block content %}
	<div id="app">
		<input v-model="inputValue" type="text">
		{{inputValue}} {# <-- i can use the brackets now #}

		<ul>
			<list-item v-bind:value="inputValue"></list-item>
		</ul>

	</div>

	<div id="app2">
	<span v-bind:title='message'>Lorem, ipsum dolor sit amet consectetur
	 adipisicing elit. Saepe, quasi.
	</span>
	</div>

	<div id="app3">
	<span v-if='seen'>Now you see me
	</span>
	</div>

	<div id="app4">
	<ul>
	<li v-for="(todo, index) in todos">
	{{ todo.text }} {{index}}
	</li>
	</ul>
	</div>

	
	<div id="app5">
	<p>{{message}}</p>
	<button v-on:click="reverseMessage">Click to reverse!
	</button>
	</div>

	<div id="app6">
	<p>{{message}}</p>
	<input type="text" v-model="message">
	</div>

	<div id="app7">
	<ul>
	<todo-item 
	v-for="item in groceryList"
	v-bind:todo="item"
	v-bind:key="item.id">
	</todo-item>
	</ul>
	</div>

{% endblock %}